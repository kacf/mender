#!/bin/bash

set -e

show_help() {
  cat << EOF

Simple tool to generate Mender Artifact suitable for file-install Update Module

Usage: $0 [options] file-tree

    Options: [ -n|artifact-name -t|--device-type -d|--dest-dir -o|--output_path -h|--help ]

        --artifact-name     - Artifact name
        --device-type       - Target device type identification
        --dest-dir          - Target destination directory where to deploy the update
        --output-path       - Path to output file. Default: file-install-artifact.mender
        --help              - Show help and exit
        file-tree           - Single file or file tree to bundle in the update

EOF
}

check_dependency() {
  hash "$1" || exit 1
}

check_dependency mender-artifact
check_dependency jq

device_type=""
artifact_name=""
dest_dir=""
output_path="file-install-artifact.mender"
meta_data_file="meta-data.json"
update_files_tar="update.tar"
file_tree=""

while (( "$#" )); do
  case "$1" in
    --device-type | -t)
      device_type=$2
      shift 2
      ;;
    --artifact-name | -n)
      artifact_name=$2
      shift 2
      ;;
    --dest-dir | -d)
      dest_dir=$2
      shift 2
      ;;
    --output-path | -o)
      output_path=$2
      shift 2
      ;;
    -h | --help)
      show_help
      exit 0
      ;;
    -*)
      echo "Error: unsupported option $1"
      show_help
      exit 1
      ;;
    *)
      if [ -n "$file_tree" ]; then
        echo "File tree already specified. Unrecognized argument \"$1\""
        show_help
        exit 1
      fi
      file_tree="$1"
      shift
      ;;
  esac
done

if [ -z "${artifact_name}" ]; then
  echo "Artifact name not specified. Aborting."
  show_help
  exit 1
fi

if [ -z "${device_type}" ]; then
  echo "Device type not specified. Aborting."
  show_help
  exit 1
fi

if [ -z "${dest_dir}" ]; then
  echo "Destination dir not specified. Aborting."
  show_help
  exit 1
fi

if [ -z "${file_tree}" ]; then
  echo "File tree not specified. Aborting."
  show_help
  exit 1
fi

# Check dest-dir is an absolute path
case $dest_dir in
  /*)
    ;;
  *)
    echo "Destination dir must be an absolute path. Aborting"
    exit 1
  ;;
esac

# Create tarball, accepts single file or directory.
if [ -e "${file_tree}" ]; then
  if [ -d "${file_tree}" ]; then
    tar -cf ${update_files_tar} -C "${file_tree}" .
  elif [ -f "${file_tree}" ]; then
    tar -cf ${update_files_tar} -C $(dirname "${file_tree}") $(basename "${file_tree}")
  else
    echo "Error: unrecognized file/diretory type \"${file_tree}\". Aborting."
    exit 1
  fi
else
  echo "Error: File/diretory \"${file_tree}\" does not exist. Aborting."
  exit 1
fi


# Create meta-data
eval "jq -n --argjson d '\"$dest_dir\"' '{\"dest-dir\": \$d}'" > $meta_data_file

mender-artifact write module-image \
  -T file-install \
  -t $device_type \
  -o $output_path \
  -n $artifact_name \
  -f $update_files_tar \
  -m $meta_data_file

rm $meta_data_file
rm $update_files_tar

echo "Artifact $output_path generated successfully:"
mender-artifact read $output_path

exit 0
